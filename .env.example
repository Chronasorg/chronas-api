# Chronas API Environment Configuration

# Application
NODE_ENV=development
PORT=3000
API_VERSION=2.0.0

# Database Configuration
DB_SECRET_NAME=/chronas/dev/docdb/modernized
TLS_CA_FILE=./certs/rds-ca-2019-root.pem

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# AWS Configuration
AWS_REGION=eu-west-1
AWS_PROFILE=chronas-dev

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://chronas.org,https://dev.chronas.org

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Cache Configuration (Redis - Optional)
REDIS_URL=redis://localhost:6379
# OR individual Redis settings:
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# Logging
LOG_LEVEL=info
CLOUDWATCH_LOG_GROUP=/aws/lambda/chronas-api

# API Keys (for service-to-service communication)
API_KEYS=dev-key-1,dev-key-2

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration (if needed)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@chronas.org

# External APIs
MAPBOX_ACCESS_TOKEN=
GOOGLE_MAPS_API_KEY=

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_CACHE=true

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this

# Lambda Specific (when deployed as Lambda)
AWS_LAMBDA_FUNCTION_NAME=
LAMBDA_TIMEOUT=30