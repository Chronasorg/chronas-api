{
  "name": "chronas-api",
  "version": "1.0.0",
  "description": "This API provides authentication and CRUD operations for data used by the Chronas application",
  "main": "index.js",
  "private": false,
  "engines": {
    "node": ">=4.8.0",
    "npm": ">=2.15.11"
  },
  "scripts": {
    "start": "cross-env DEBUG=chronas-api:* gulp serve",
    "start:debug": "cross-env DEBUG=chronas-api:* npm start",
    "build": "gulp",
    "lint": "esw *.js server config --color --fix",
    "lint:watch": "npm run lint -- --watch",
    "precommit": "npm run lint && npm test",
    "test": "cross-env NODE_ENV=test ./node_modules/.bin/mocha --ui bdd --reporter spec --colors --compilers js:babel-core/register server/tests --recursive",
    "test:watch": "npm test -- --watch",
    "test:coverage": "cross-env NODE_ENV=test ./node_modules/.bin/istanbul cover _mocha -- --ui bdd --reporter spec --colors --compilers js:babel-core/register server/tests --recursive",
    "test:check-coverage": "npm test:coverage && istanbul check-coverage",
    "report-coverage": "coveralls < ./coverage/lcov.info"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/daumann/chronas-api.git"
  },
  "dependencies": {
    "bluebird": "3.5.0",
    "body-parser": "1.18.1",
    "compression": "1.7.0",
    "cookie-parser": "1.4.3",
    "cors": "2.8.4",
    "debug": "2.6.9",
    "dotenv": "^4.0.0",
    "express": "4.15.4",
    "express-jwt": "5.3.0",
    "express-validation": "1.0.2",
    "express-winston": "2.4.0",
    "helmet": "3.8.1",
    "http-status": "^0.2.5",
    "joi": "11.0.2",
    "jsonwebtoken": "7.1.9",
    "method-override": "2.3.10",
    "mongoose": "4.11.12",
    "morgan": "1.7.0",
    "winston": "2.3.1"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "chai": "^3.4.1",
    "commitizen": "^2.9.2",
    "coveralls": "2.13.3",
    "cross-env": "3.1.3",
    "cz-conventional-changelog": "1.2.0",
    "del": "^2.2.0",
    "eslint": "3.16.1",
    "eslint-config-airbnb-base": "7.1.0",
    "eslint-plugin-import": "1.16.0",
    "eslint-watch": "2.1.14",
    "gulp": "3.9.1",
    "gulp-babel": "6.1.2",
    "gulp-load-plugins": "^1.2.0",
    "gulp-newer": "^1.1.0",
    "gulp-nodemon": "^2.0.6",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-util": "^3.0.7",
    "gulp-zip": "4.0.0",
    "husky": "^0.13.1",
    "istanbul": "1.1.0-alpha.1",
    "minimist": "1.2.0",
    "mocha": "3.2.0",
    "run-sequence": "^1.1.5",
    "supertest": "2.0.1",
    "supertest-as-promised": "4.0.2",
    "validate-commit-msg": "^2.6.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "bugs": {
    "url": "https://github.com/daumann/chronas-api/issues"
  }
}
