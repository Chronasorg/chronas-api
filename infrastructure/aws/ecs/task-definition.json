{
    "family": "chronas-api-def",
    "networkMode": "awsvpc",
    "containerDefinitions": [
        {
            "name": "chronas-api-def",
            "image": "aumanjoa/chronas-api",
            "environment": [
                {
                    "name": "MONGO_HOST",
                    "value": "chronas-api-def-mongo-host"
                }
            ],            
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/chronas-api-def",
                  "awslogs-region": "eu-central-1",
                  "awslogs-stream-prefix": "ecs"
                }
              }
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "1024",
    "memory": "2048",
    "taskRoleArn": "arn:aws:iam::980343854643:role/ecsTaskExecutionRole",
    "executionRoleArn": "arn:aws:iam::980343854643:role/ecsTaskExecutionRole"
}